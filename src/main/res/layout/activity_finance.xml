<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="FinanceViewModel"
            type="com.farmerfirst.growagric.ui.finance.FinanceViewModel"/>
    </data>
    <RelativeLayout
        android:id="@+id/rootContentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg_color"
        tools:context=".ui.finance.FinanceActivity">
        <LinearLayout
            android:id="@+id/linearRegisterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginTop="80dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/tvUserProfileName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:background="@color/custom_app_theme_color_lite"
                android:contentDescription="@string/app_name" />
            <com.shuhart.stepview.StepView
                android:id="@+id/stepView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="24dp"
                android:padding="2dp"
                app:sv_animationDuration="1"
                app:sv_animationType="Line"
                app:sv_doneCircleColor="@color/colorLightGray"
                app:sv_doneCircleRadius="15dp"
                app:sv_doneStepLineColor="@color/colorGray"
                app:sv_doneStepMarkColor="@color/black"
                app:sv_doneTextColor="@color/custom_app_theme_color"
                app:sv_nextStepLineColor="@color/colorGray"
                app:sv_nextTextColor="@color/colorGray"
                app:sv_selectedCircleColor="@color/colorDarkOrange"
                app:sv_selectedCircleRadius="12dp"
                app:sv_selectedStepNumberColor="@color/white"
                app:sv_selectedTextColor="@color/custom_app_theme_color"
                app:sv_stepLineWidth="1dp"
                app:sv_stepNumberTextSize="12sp"
                app:sv_stepPadding="4dp"
                app:sv_stepViewStyle="@style/StepView"
                app:sv_steps="@array/finance_steps"
                app:sv_stepsNumber="2"
                app:sv_textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    android:scrollbarThumbVertical="@drawable/ga_scrollbar"
                    android:scrollbarStyle="insideInset">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginStart="24dp"
                        android:orientation="vertical">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/loanOne"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                tools:ignore="MissingConstraints">
                                <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                                    android:id="@+id/spinFarmDetail"
                                    android:layout_width="match_parent"
                                    android:layout_height="43dp"
                                    android:contentDescription="@string/app_name"
                                    app:smsp_floatingLabelColor="#1976D2"
                                    app:smsp_floatingLabelText="Floating Label Text"
                                    app:smsp_hint="Select farm that needs financing"
                                    app:smsp_hintColor="#388E3C"
                                    app:smsp_isOutlined="true"
                                    app:smsp_itemColor="@color/black"
                                    app:smsp_itemListColor="@color/black"
                                    app:smsp_itemListHintBackgroundColor="#808080"
                                    app:smsp_itemListHintColor="#FFFFFF"
                                    app:smsp_multilineError="false"
                                    app:smsp_outlinedBoxColor="@color/black"
                                    app:smsp_outlinedBoxRadius="0dp"
                                    app:smsp_selectedItemListColor="#FF5252"
                                    tools:ignore="DuplicateSpeakableTextCheck" />
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/texteditNumberOfBirdsToRaisedNow"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    app:hintEnabled="true"
                                    app:hintTextAppearance="@style/HintText">
                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/editNumberOfBirdsToRaisedNow"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:autofillHints=""
                                        android:background="@drawable/ga_edit_text_drawable"
                                        android:hint="@string/finance_chick_raised"
                                        android:inputType="number"
                                        android:maxLength="6"
                                        android:padding="10dp"
                                        android:singleLine="true"
                                        android:text="@={FinanceViewModel.NumberOfBirdsToRaisedNow}"
                                        android:textColor="@color/black"
                                        android:textColorHint="#888"
                                        android:textSize="16sp"
                                        tools:ignore="SpeakableTextPresentCheck" />
                                </com.google.android.material.textfield.TextInputLayout>
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/texteditAverageMortalityRate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    app:hintEnabled="true"
                                    app:hintTextAppearance="@style/HintText">
                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/editAverageMortalityRate"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:autofillHints=""
                                        android:background="@drawable/ga_edit_text_drawable"
                                        android:hint="@string/finance_mortality_rate"
                                        android:inputType="number"
                                        android:maxLength="3"
                                        android:padding="10dp"
                                        android:singleLine="true"
                                        android:text="@={FinanceViewModel.AverageMortalityRate}"
                                        android:textColor="@color/black"
                                        android:textColorHint="#888"
                                        android:textSize="16sp"
                                        tools:ignore="SpeakableTextPresentCheck" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/loanTwo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:orientation="vertical"
                                tools:ignore="MissingConstraints">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="0dp"
                                    android:text="Provide cost breakdown for the inputs below:"
                                    android:textColor="#33691E" />
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/texteditTotalCostOfChicks"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    app:hintEnabled="true"
                                    app:hintTextAppearance="@style/HintText">
                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/editTotalCostOfChicks"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:autofillHints=""
                                        android:background="@drawable/ga_edit_text_drawable"
                                        android:hint="@string/finance_total_chick_cost"
                                        android:inputType="number"
                                        android:maxLength="7"
                                        android:padding="10dp"
                                        android:singleLine="true"
                                        android:text="@={FinanceViewModel.TotalCostOfChicks}"
                                        android:textColor="@color/black"
                                        android:textColorHint="#888"
                                        android:textSize="16sp"
                                        tools:ignore="SpeakableTextPresentCheck" />
                                </com.google.android.material.textfield.TextInputLayout>
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/texteditTotalCostOfFeeds"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    app:hintEnabled="true"
                                    app:hintTextAppearance="@style/HintText">
                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/editTotalCostOfFeeds"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:autofillHints=""
                                        android:background="@drawable/ga_edit_text_drawable"
                                        android:hint="@string/finance_total_cost_of_feeds"
                                        android:inputType="number"
                                        android:maxLength="7"
                                        android:padding="10dp"
                                        android:singleLine="true"
                                        android:text="@={FinanceViewModel.TotalCostOfFeeds}"
                                        android:textColor="@color/black"
                                        android:textColorHint="#888"
                                        android:textSize="16sp"
                                        tools:ignore="SpeakableTextPresentCheck" />
                                </com.google.android.material.textfield.TextInputLayout>
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/texteditTotalBroodingCost"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    app:hintEnabled="true"
                                    app:hintTextAppearance="@style/HintText">
                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/editTotalBroodingCost"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:autofillHints=""
                                        android:background="@drawable/ga_edit_text_drawable"
                                        android:hint="@string/finance_total_brooding_cost"
                                        android:inputType="number"
                                        android:maxLength="7"
                                        android:padding="10dp"
                                        android:singleLine="true"
                                        android:text="@={FinanceViewModel.TotalBroodingCost}"
                                        android:textColor="@color/black"
                                        android:textColorHint="#888"
                                        android:textSize="16sp"
                                        tools:ignore="SpeakableTextPresentCheck" />
                                </com.google.android.material.textfield.TextInputLayout>
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/texteditMedicineVaccineCost"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    app:hintEnabled="true"
                                    app:hintTextAppearance="@style/HintText">
                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/editMedicineVaccineCost"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:autofillHints=""
                                        android:background="@drawable/ga_edit_text_drawable"
                                        android:hint="@string/finance_medicine_and_vaccine_cost"
                                        android:inputType="number"
                                        android:maxLength="7"
                                        android:padding="10dp"
                                        android:singleLine="true"
                                        android:text="@={FinanceViewModel.MedicineVaccineCost}"
                                        android:textColor="@color/black"
                                        android:textColorHint="#888"
                                        android:textSize="16sp"
                                        tools:ignore="SpeakableTextPresentCheck" />
                                </com.google.android.material.textfield.TextInputLayout>
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/texteditLoanAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    app:hintEnabled="true"
                                    app:hintTextAppearance="@style/HintText">
                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/editLoanAmount"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:autofillHints=""
                                        android:background="@drawable/ga_edit_text_drawable"
                                        android:hint="@string/finance_cost_breakdown"
                                        android:inputType="number"
                                        android:maxLength="15"
                                        android:padding="10dp"
                                        android:singleLine="true"
                                        android:text="@={FinanceViewModel.LoanAmount}"
                                        android:textColor="@color/black"
                                        android:textColorHint="#888"
                                        android:textSize="16sp"
                                        android:enabled="false"
                                        tools:ignore="SpeakableTextPresentCheck" />
                                </com.google.android.material.textfield.TextInputLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:orientation="horizontal"
                                    android:weightSum="1">
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/textFinanceDate"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight=".85"
                                        app:hintEnabled="true"
                                        app:hintTextAppearance="@style/HintText">
                                        <androidx.appcompat.widget.AppCompatEditText
                                            android:id="@+id/editFinanceDate"
                                            android:layout_width="match_parent"
                                            android:layout_height="48dp"
                                            android:autofillHints=""
                                            android:background="@drawable/ga_edit_text_drawable"
                                            android:hint="@string/finance_when_is_needed"
                                            android:inputType="number"
                                            android:maxLength="10"
                                            android:padding="10dp"
                                            android:singleLine="true"
                                            android:text="@={FinanceViewModel.FinanceDate}"
                                            android:textColor="@color/black"
                                            android:textColorHint="#888"
                                            android:textSize="16sp"
                                            android:focusable="false"
                                            android:longClickable="false"
                                            tools:ignore="SpeakableTextPresentCheck,TooDeepLayout" />
                                    </com.google.android.material.textfield.TextInputLayout>
                                    <androidx.appcompat.widget.AppCompatImageButton
                                        android:id="@+id/buttonDatePicker"
                                        android:layout_width="0dp"
                                        android:layout_height="44dp"
                                        android:layout_gravity="bottom"
                                        android:layout_marginStart="1dp"
                                        android:layout_marginEnd="1dp"
                                        android:layout_weight=".15"
                                        android:adjustViewBounds="true"
                                        android:background="@drawable/ga_layout_drawable"
                                        android:padding="10dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/ic_calendar128x128"
                                        android:tint="@color/custom_app_theme_color"
                                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/loanThree"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                tools:ignore="MissingConstraints">
                                <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                                    android:id="@+id/spinPreferredChickSupplier"
                                    android:layout_width="match_parent"
                                    android:layout_height="43dp"
                                    android:layout_marginTop="10dp"
                                    android:contentDescription="@string/app_name"
                                    app:smsp_floatingLabelColor="#1976D2"
                                    app:smsp_floatingLabelText="Floating Label Text"
                                    app:smsp_hint="Preferred chick supplier"
                                    app:smsp_hintColor="#388E3C"
                                    app:smsp_isOutlined="true"
                                    app:smsp_itemColor="@color/black"
                                    app:smsp_itemListColor="@color/black"
                                    app:smsp_itemListHintBackgroundColor="#808080"
                                    app:smsp_itemListHintColor="#FFFFFF"
                                    app:smsp_multilineError="false"
                                    app:smsp_outlinedBoxColor="@color/black"
                                    app:smsp_outlinedBoxRadius="0dp"
                                    app:smsp_selectedItemListColor="#FF5252" />
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/textChickSupplier"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:visibility="gone"
                                    app:hintEnabled="true"
                                    app:hintTextAppearance="@style/HintText">
                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/editChickSupplier"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:background="@drawable/ga_edit_text_drawable"
                                        android:hint="Chick supplier"
                                        android:inputType="text"
                                        android:padding="10dp"
                                        android:singleLine="true"
                                        android:textColor="@color/black"
                                        android:textColorHint="#888"
                                        android:textSize="16sp"
                                        android:maxLength="20"
                                        android:autofillHints="" />
                                </com.google.android.material.textfield.TextInputLayout>
                                <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                                    android:id="@+id/spinPreferredFeedsSupplier"
                                    android:layout_width="match_parent"
                                    android:layout_height="43dp"
                                    android:layout_marginTop="10dp"
                                    android:contentDescription="@string/app_name"
                                    app:smsp_floatingLabelColor="#1976D2"
                                    app:smsp_floatingLabelText="Floating Label Text"
                                    app:smsp_hint="Preferred feeds supplier"
                                    app:smsp_hintColor="#388E3C"
                                    app:smsp_isOutlined="true"
                                    app:smsp_itemColor="@color/black"
                                    app:smsp_itemListColor="@color/black"
                                    app:smsp_itemListHintBackgroundColor="#808080"
                                    app:smsp_itemListHintColor="#FFFFFF"
                                    app:smsp_multilineError="false"
                                    app:smsp_outlinedBoxColor="@color/black"
                                    app:smsp_outlinedBoxRadius="0dp"
                                    app:smsp_selectedItemListColor="#FF5252" />
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/textFeedsSupplier"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:visibility="gone"
                                    app:hintEnabled="true"
                                    app:hintTextAppearance="@style/HintText">
                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/editFeedsSupplier"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:background="@drawable/ga_edit_text_drawable"
                                        android:hint="Feeds supplier"
                                        android:inputType="text"
                                        android:padding="10dp"
                                        android:singleLine="true"
                                        android:textColor="@color/black"
                                        android:textColorHint="#888"
                                        android:textSize="16sp"
                                        android:maxLength="20"
                                        android:autofillHints="" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/loanFour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                tools:ignore="MissingConstraints">
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/textProjectSalePerChick"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    app:hintEnabled="true"
                                    app:hintTextAppearance="@style/HintText">
                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/editProjectSalePerChick"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:background="@drawable/ga_edit_text_drawable"
                                        android:hint="Projected sale price per chicken"
                                        android:inputType="number"
                                        android:padding="10dp"
                                        android:singleLine="true"
                                        android:textColor="@color/black"
                                        android:textColorHint="#888"
                                        android:textSize="16sp"
                                        android:maxLength="3"
                                        android:autofillHints="" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <RelativeLayout
                            android:id="@+id/submitLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:visibility="gone">
                            <!--androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/registerButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="30dp"
                                android:background="@drawable/ga_button_drawable"
                                android:text="@string/button_submit"
                                android:textAllCaps="true"
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:padding="15dp"
                                android:onClick="@{(v) -> FinanceViewModel.onClick(v)}"/-->
                            <com.kusu.loadingbutton.LoadingButton
                                android:id="@+id/buttonSubmit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="20dp"
                                android:text="@string/button_submit"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:onClick="@{(v) -> FinanceViewModel.onClick(v)}"
                                android:textSize="15sp"
                                app:lb_loaderMargin="0dp"
                                app:lb_buttonColor="@color/custom_app_theme_color"
                                app:lb_isShadowEnable="false"
                                app:lb_isCircular="false"
                                app:lb_shadowColor="@color/custom_app_theme_color_lite"
                                app:lb_shadowHeight="0dp"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/navigationLayout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1">
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnBack"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/ga_button_drawable"
                                android:text="Back"
                                android:textAllCaps="true"
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:padding="15dp"
                                android:layout_weight=".45"
                                tools:ignore="NestedWeights" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:layout_weight=".05"/>
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnNext"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/ga_button_drawable"
                                android:text="Next"
                                android:textAllCaps="true"
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:padding="15dp"
                                android:layout_weight=".45"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
    </RelativeLayout>
</layout>