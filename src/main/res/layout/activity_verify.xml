<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="VerifyViewModel"
            type="com.farmerfirst.growagric.ui.otp.VerifyViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg_color"
        tools:context=".ui.otp.VerifyActivity">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/transparent">
                <TextView
                    style="@style/customHeaderStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="30dp"
                    android:text="Verify phone number"
                    android:textAllCaps="true"
                    android:textColor="@color/custom_app_theme_color"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/growagric"
                        android:contentDescription="@string/app_name"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">
                    <!--androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editVerificationCode"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/ga_edit_text_drawable"
                        android:gravity="start|center_vertical"
                        android:hint="@string/ga_verify_code"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="6"
                        android:padding="10dp"
                        android:text="@={VerifyViewModel.VerifyCode}"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="#888"
                        android:textSize="16sp" /-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ga_verify_code"
                        android:textColor="@color/colorGray"/>
                    <com.chaos.view.PinView
                        android:id="@+id/editVerificationCode"
                        app:itemCount="6"
                        app:itemWidth="48dp"
                        app:itemHeight="48dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:inputType="number"
                        android:cursorVisible="true"
                        android:textColor="@color/black"
                        android:text="@={VerifyViewModel.VerifyCode}"
                        app:hideLineWhenFilled="false"
                        app:itemRadius="5dp"
                        app:lineWidth="1dp"
                        app:itemSpacing="15dp"
                        app:lineColor="@color/black"
                        style="@style/PinWidget.PinView" />
                </LinearLayout>
                <com.kusu.loadingbutton.LoadingButton
                    android:id="@+id/confirmPhoneNumberButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ga_button_drawable"
                    android:text="@string/ga_confirm"
                    android:textAllCaps="true"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="end"
                    android:onClick="@{(v) -> VerifyViewModel.onClick(v)}"
                    app:lb_loaderMargin="0dp"
                    app:lb_buttonColor="@color/custom_app_theme_color"
                    app:lb_isShadowEnable="false"
                    app:lb_isCircular="false"
                    app:lb_shadowColor="@color/custom_app_theme_color_lite"
                    app:lb_shadowHeight="0dp"/>
                <!--androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/confirmPhoneNumberButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ga_button_drawable"
                    android:text="@string/ga_confirm"
                    android:textAllCaps="true"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="15dp"
                    android:textColor="@color/white"
                    android:layout_gravity="end"
                    android:onClick="@{(v) -> VerifyViewModel.onClick(v)}"/-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Did not receive a verification code?"
                    android:textColor="@color/colorPrimary" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="end">
                    <TextView
                        android:id="@+id/textButtonResend"
                        android:layout_width="210dp"
                        android:layout_height="48dp"
                        android:layout_gravity="end"
                        style="@style/Button"
                        android:background="@drawable/ga_layout_drawable"
                        android:text="Resend"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>