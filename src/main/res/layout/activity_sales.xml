<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="SalesViewModel"
            type="com.farmerfirst.growagric.ui.record_keeping.sales.SalesActivity"/>
    </data>
    <RelativeLayout
        android:id="@+id/salesRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg_color"
        tools:context=".ui.record_keeping.sales.SalesActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:background="@android:color/transparent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/tvUserProfileName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="0dp"
                android:background="@color/custom_app_theme_color_lite"
                android:contentDescription="@string/app_name" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/app_bg_color"
                    android:orientation="vertical"
                    android:layout_marginBottom="45dp"
                    android:padding="8dp">
                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/spinFarm"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:contentDescription="@string/app_name"
                        app:smsp_floatingLabelColor="#1976D2"
                        app:smsp_floatingLabelText="Floating Label Text"
                        app:smsp_hint="Select farm"
                        app:smsp_hintColor="#388E3C"
                        app:smsp_isOutlined="true"
                        app:smsp_itemColor="@color/black"
                        app:smsp_itemListColor="@color/black"
                        app:smsp_itemListHintBackgroundColor="#808080"
                        app:smsp_itemListHintColor="#FFFFFF"
                        app:smsp_multilineError="false"
                        app:smsp_outlinedBoxColor="@color/black"
                        app:smsp_outlinedBoxRadius="0dp"
                        app:smsp_selectedItemListColor="#FF5252"
                        tools:ignore="DuplicateSpeakableTextCheck" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textFarmID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        app:hintEnabled="false"
                        app:hintTextAppearance="@style/HintText">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/editFarmID"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/ga_edit_text_drawable"
                            android:hint="ID"
                            android:inputType="text"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="#888"
                            android:textSize="16sp"
                            android:maxLength="80"
                            android:autofillHints="" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/spinCustomerName"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/app_name"
                        app:smsp_floatingLabelColor="#1976D2"
                        app:smsp_floatingLabelText="Floating Label Text"
                        app:smsp_hint="Customer name"
                        app:smsp_hintColor="#388E3C"
                        app:smsp_isOutlined="true"
                        app:smsp_itemColor="@color/black"
                        app:smsp_itemListColor="@color/black"
                        app:smsp_itemListHintBackgroundColor="#808080"
                        app:smsp_itemListHintColor="#FFFFFF"
                        app:smsp_multilineError="false"
                        app:smsp_outlinedBoxColor="@color/black"
                        app:smsp_outlinedBoxRadius="0dp"
                        app:smsp_selectedItemListColor="#FF5252" />
                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/spinItemSold"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/app_name"
                        app:smsp_floatingLabelColor="#1976D2"
                        app:smsp_floatingLabelText="Floating Label Text"
                        app:smsp_hint="Item sold"
                        app:smsp_hintColor="#388E3C"
                        app:smsp_isOutlined="true"
                        app:smsp_itemColor="@color/black"
                        app:smsp_itemListColor="@color/black"
                        app:smsp_itemListHintBackgroundColor="#808080"
                        app:smsp_itemListHintColor="#FFFFFF"
                        app:smsp_multilineError="false"
                        app:smsp_outlinedBoxColor="@color/black"
                        app:smsp_outlinedBoxRadius="0dp"
                        app:smsp_selectedItemListColor="#FF5252" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:weightSum="1">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textDateSold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".85"
                            app:hintEnabled="true"
                            app:hintTextAppearance="@style/HintText">
                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/editDateSold"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:autofillHints=""
                                android:background="@drawable/ga_edit_text_drawable"
                                android:hint="Date sold"
                                android:inputType="number"
                                android:maxLength="10"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="#888"
                                android:textSize="16sp"
                                android:focusable="false"
                                android:longClickable="false" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/buttonDatePicker"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="1dp"
                            android:layout_marginEnd="1dp"
                            android:layout_weight=".15"
                            android:adjustViewBounds="true"
                            android:background="@drawable/ga_layout_drawable"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_calendar128x128"
                            android:tint="@color/custom_app_theme_color"/>
                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/HintText">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/editQuantity"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/ga_edit_text_drawable"
                            android:hint="Quantity"
                            android:inputType="number"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="#888"
                            android:textSize="16sp"
                            android:maxLength="6"
                            android:autofillHints="" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textTotalSellingPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/HintText">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/editTotalSellingPrice"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/ga_edit_text_drawable"
                            android:hint="Total selling price"
                            android:inputType="number"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="#888"
                            android:textSize="16sp"
                            android:maxLength="8"
                            android:autofillHints="" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.kusu.loadingbutton.LoadingButton
                        android:id="@+id/buttonSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="@string/save"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        app:lb_loaderMargin="0dp"
                        app:lb_buttonColor="@color/custom_app_theme_color"
                        app:lb_isShadowEnable="false"
                        app:lb_isCircular="false"
                        app:lb_shadowColor="@color/custom_app_theme_color_lite"
                        app:lb_shadowHeight="0dp"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</layout>