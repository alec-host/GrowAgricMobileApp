<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="ChangePasswordViewModel"
            type="com.farmerfirst.growagric.ui.change_password.ChangePasswordActivity"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/changePasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg_color"
        tools:context=".ui.change_password.ChangePasswordActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                style="@style/customHeaderStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="30dp"
                android:text="Change password"
                android:textAllCaps="true"
                android:textColor="@color/custom_app_theme_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/growagric"
                    android:contentDescription="@string/app_name"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true"
                app:passwordToggleDrawable="@drawable/ga_password_selector"
                app:passwordToggleTint="@color/custom_app_theme_color"
                app:passwordToggleTintMode="src_in">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/ga_edit_text_drawable"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/black"
                    android:ellipsize="start"
                    android:ems="10"
                    android:gravity="start|center_vertical"
                    android:hint="@string/edit_text_password"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#888"
                    android:textSize="16sp"
                    tools:targetApi="o" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true"
                app:passwordToggleDrawable="@drawable/ga_password_selector"
                app:passwordToggleTint="@color/custom_app_theme_color"
                app:passwordToggleTintMode="src_in">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/confirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/ga_edit_text_drawable"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/black"
                    android:ellipsize="start"
                    android:ems="10"
                    android:gravity="start|center_vertical"
                    android:hint="@string/login_confirm_password_hint"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#888"
                    android:textSize="16sp"
                    tools:targetApi="o" />
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ga_verify_code"
                    android:textColor="@color/colorGray"/>
                <com.chaos.view.PinView
                    android:id="@+id/pinView"
                    app:itemCount="6"
                    app:itemWidth="48dp"
                    app:itemHeight="48dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:cursorVisible="true"
                    android:textColor="@color/black"
                    app:hideLineWhenFilled="false"
                    app:itemRadius="5dp"
                    app:lineWidth="1dp"
                    app:itemSpacing="16dp"
                    app:lineColor="@color/black"
                    style="@style/PinWidget.PinView" />
            </LinearLayout>

            <!--androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:background="@drawable/ga_button_drawable"
                android:text="Login"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textStyle="bold"
                android:padding="15dp"
                android:textColor="@color/white"
                android:layout_gravity="end"
                android:onClick="@{(v) -> LoginViewModel.onClick(v)}"/-->
            <com.kusu.loadingbutton.LoadingButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Reset"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"
                app:lb_loaderMargin="0dp"
                app:lb_buttonColor="@color/custom_app_theme_color"
                app:lb_isShadowEnable="false"
                app:lb_isCircular="false"
                app:lb_shadowColor="@color/custom_app_theme_color_lite"
                app:lb_shadowHeight="0dp"/>
            <!--GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2">
                <TextView
                    android:id="@+id/signUpCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_gravity="start"
                    android:text="@string/login_signup_hint"
                    android:textColor="@color/primaryTextColor"
                    android:clickable="true"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:focusable="true" />
                <TextView
                    android:id="@+id/forgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="end"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Forgot Password"
                    android:textColor="@color/primaryTextColor"
                    android:textStyle="bold"
                    android:textSize="13sp" />
            </GridLayout-->
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>