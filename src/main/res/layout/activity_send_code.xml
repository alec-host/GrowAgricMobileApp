<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="SendCodeViewModel"
            type="com.farmerfirst.growagric.ui.change_password.SendCodeActivity"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg_color"
        tools:context=".ui.change_password.ChangePasswordActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                style="@style/customHeaderStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="30dp"
                android:text="Change Password"
                android:textAllCaps="true"
                android:textColor="@color/custom_app_theme_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/growagric"
                    android:contentDescription="@string/app_name"/>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInput1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:hintEnabled="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="15dp">
                    <com.hbb20.CountryCodePicker
                        android:id="@+id/countryCodeHolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        app:ccp_flagBorderColor="@color/custom_app_theme_color_lite"
                        app:ccp_padding="0dp"
                        app:ccp_textGravity="LEFT"
                        app:ccp_showPhoneCode="false"
                        app:ccp_arrowColor="@color/black"
                        app:ccpDialog_backgroundColor="@color/white"
                        app:ccpDialog_showTitle="false"
                        app:ccpDialog_fastScroller_handleColor="@color/custom_app_theme_color_lite"
                        app:ccpDialog_showCloseIcon="true"
                        app:ccpDialog_textColor="@color/black"
                        app:ccp_autoDetectCountry="true"
                        app:ccp_areaCodeDetectedCountry="true"
                        app:ccp_contentColor="@color/black"
                        app:ccp_hintExampleNumber="true"
                        app:ccp_hintExampleNumberType="MOBILE"
                        app:ccp_showNameCode="false"
                        app:ccp_textSize="16sp"
                        app:ccp_countryPreference="KE"
                        app:ccp_customMasterCountries="KE,GB" />
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/ga_edit_text_drawable"
                        android:gravity="start|center_vertical"
                        android:hint="@string/edit_text_phone"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="#888"
                        android:textSize="16sp"
                        tools:targetApi="o" />
                </LinearLayout>
            </com.google.android.material.textfield.TextInputLayout>

            <!--androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:background="@drawable/ga_button_drawable"
                android:text="Login"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textStyle="bold"
                android:padding="15dp"
                android:textColor="@color/white"
                android:layout_gravity="end"
                android:onClick="@{(v) -> LoginViewModel.onClick(v)}"/-->
            <com.kusu.loadingbutton.LoadingButton
                android:id="@+id/btnSendCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/send_code"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"
                app:lb_loaderMargin="0dp"
                app:lb_buttonColor="@color/custom_app_theme_color"
                app:lb_isShadowEnable="false"
                app:lb_isCircular="false"
                app:lb_shadowColor="@color/custom_app_theme_color_lite"
                app:lb_shadowHeight="0dp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>