<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="RecordTypeViewModel"
            type="com.farmerfirst.growagric.ui.record_keeping.RecordTypeActivity"/>
    </data>
    <RelativeLayout
        android:id="@+id/chatRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg_color"
        tools:context=".ui.record_keeping.RecordTypeActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:background="@android:color/transparent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/tvUserProfileName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="0dp"
                android:background="@color/custom_app_theme_color_lite"
                android:contentDescription="@string/app_name" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginBottom="45dp"
                android:padding="8dp">
                <ListView
                    android:id="@+id/listRecordTypeItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:paddingBottom="24dp"
                    android:scrollbars="none" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>