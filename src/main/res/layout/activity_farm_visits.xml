<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="FarmVisitBeforeFinanceViewModel"
            type="com.farmerfirst.growagric.ui.farm_visit.FarmVisitsActivity"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg_color"
        tools:context=".ui.farm_visit.FarmVisitsActivity">
        <LinearLayout
            android:id="@+id/linearOuter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_marginTop="80dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:background="@android:color/transparent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/custom_app_theme_color_lite">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="top"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent">
                        <LinearLayout
                            android:id="@+id/linearLayoutFirstVisit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="45dp"
                            android:layout_gravity="top"
                            android:orientation="vertical">
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/textSearchFarmer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    app:hintEnabled="true"
                                    app:hintTextAppearance="@style/HintText">
                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/editSearchFarmer"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:autofillHints=""
                                        android:background="@drawable/ga_edit_text_drawable"
                                        android:hint="@string/visit_search_farmer"
                                        android:inputType="text"
                                        android:maxLength="50"
                                        android:padding="10dp"
                                        android:singleLine="true"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textColorHint="#888"
                                        android:textSize="16sp"
                                        tools:ignore="SpeakableTextPresentCheck"/>
                                </com.google.android.material.textfield.TextInputLayout>
                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/confirmPhoneNumberButton"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:background="@drawable/ga_button_drawable"
                                    android:text="@string/visit_farm_history"
                                    android:textAllCaps="true"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:padding="15dp"
                                    android:textColor="@color/white"
                                    android:layout_gravity="end"/>
                                <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                                    android:id="@+id/spinFarmDetail"
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_height="43dp"
                                    android:contentDescription="@string/app_name"
                                    app:smsp_floatingLabelColor="#1976D2"
                                    app:smsp_floatingLabelText="Floating Label Text"
                                    app:smsp_hint="Farm you are visiting?"
                                    app:smsp_hintColor="#388E3C"
                                    app:smsp_isOutlined="true"
                                    app:smsp_itemColor="@color/black"
                                    app:smsp_itemListColor="@color/black"
                                    app:smsp_itemListHintBackgroundColor="#808080"
                                    app:smsp_itemListHintColor="#FFFFFF"
                                    app:smsp_multilineError="false"
                                    app:smsp_outlinedBoxColor="@color/black"
                                    app:smsp_outlinedBoxRadius="0dp"
                                    app:smsp_selectedItemListColor="#FF5252"
                                    tools:ignore="DuplicateSpeakableTextCheck"/>
                                <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                                    android:id="@+id/spinFarmVisitType"
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_height="43dp"
                                    android:contentDescription="@string/app_name"
                                    app:smsp_floatingLabelColor="#1976D2"
                                    app:smsp_floatingLabelText="Floating Label Text"
                                    app:smsp_hint="What type of visit is this?"
                                    app:smsp_hintColor="#388E3C"
                                    app:smsp_isOutlined="true"
                                    app:smsp_itemColor="@color/black"
                                    app:smsp_itemListColor="@color/black"
                                    app:smsp_itemListHintBackgroundColor="#808080"
                                    app:smsp_itemListHintColor="#FFFFFF"
                                    app:smsp_multilineError="false"
                                    app:smsp_outlinedBoxColor="@color/black"
                                    app:smsp_outlinedBoxRadius="0dp"
                                    app:smsp_selectedItemListColor="#FF5252"/>
                                <LinearLayout
                                    android:id="@+id/layoutFarmVisitBeforeFinance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <include
                                        android:id="@+id/farmVisitBeforeFinance"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        layout="@layout/farm_visit_before_finance"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/layoutFarmVisitAfterFinance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone">
                                        <include
                                            android:id="@+id/farmVisitAfterFinance"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            layout="@layout/farm_visit_after_finance"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/layoutFarmReturnVisitAfterFinance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone">
                                    <include
                                        android:id="@+id/farmReturnVisitAfterFinance"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        layout="@layout/farm_return_visit_after_finance"/>
                                </LinearLayout>
                        </LinearLayout>
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>