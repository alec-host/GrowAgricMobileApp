    </style-->

    <style name="customActivityNoActionBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/colorDarkOrange</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>