<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#b8b894" /> <!-- Background color of the bubble -->
            <corners
                android:topLeftRadius="20dp"
                android:bottomLeftRadius="3dp"
                android:topRightRadius="20dp"
                android:bottomRightRadius="20dp"/> <!-- Corner radius of the bubble -->
        </shape>
    </item>
    <item
        android:right="8dp"
        android:left="8dp">
        <shape
            android:shape="oval">
            <solid android:color=" #b8b894" /> <!-- Background color of the triangle -->
        </shape>
    </item>
</layer-list>